<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_thumb_product_cart"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:src="@drawable/image_product_1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@+id/iv_thumb_product_cart"
            android:orientation="horizontal"
            android:weightSum="10">

            <LinearLayout
                android:layout_width="100dp"
                android:layout_height="110dp"
                android:layout_weight="7"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_name_product_cart"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:paddingLeft="10dp"
                    android:text="@string/app_name"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tv_price_product_cart"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="50000Ä‘" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="110dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:weightSum="3">

                <ImageButton
                    android:id="@+id/add_qproduct_btn"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:src="@drawable/add_quantity_product" />

                <TextView
                    android:id="@+id/tv_quantity_product_cart"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="2" />

                <ImageButton
                    android:id="@+id/delete_qproduct_btn"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:src="@drawable/remove_quantity_product" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2">

                <TextView
                    android:id="@+id/tv_sum_price_product_cart"
                    android:layout_width="match_parent"
                    android:layout_height="110dp"
                    android:gravity="center"
                    android:text="400000" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

</androidx.cardview.widget.CardView>